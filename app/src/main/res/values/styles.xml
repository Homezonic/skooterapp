<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Base" parent="AppTheme">
        <item name="colorPrimary">@color/skooterNPrimaryTextColor</item>
        <item name="colorPrimaryDark">@color/skooterNPrimaryTextColorDark</item>
        <item name="colorAccent">@color/skooterColorBackgroundAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/skooterBackgroundColor</item>
        <item name="android:homeAsUpIndicator">@color/skooterBackgroundColor</item>
        <item name="homeAsUpIndicator">@color/skooterBackgroundColor</item>
        <item name="actionMenuTextColor">@color/md_white_1000</item>
    </style>

    <style name="Theme.Skooter" parent="Theme.Base"/>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">@color/skooterPrimaryTextColor</item>
        <item name="android:actionMenuTextColor">@color/skooterPrimaryTextColor</item>
        <item name="android:textColorSecondary">@color/skooterPrimaryTextColor</item>
        <item name="android:background">@color/skooterNPrimaryTextColor</item>
        <item name="theme">@style/ThemeOverlay.Skooter.ActionBar</item>
    </style>

    <style name="ThemeOverlay.Skooter.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/md_white_1000</item>
    </style>

    <style name="TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:actionMenuTextColor">@color/skooterBackgroundColor</item>
        <item name="android:textColorPrimary">@color/skooterPrimaryTextColor</item>
        <item name="android:textColorSecondary">@color/skooterPrimaryTextColor</item>
        <item name="android:colorFocusedHighlight">@color/skooterBackgroundColor</item>
    </style>

    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#663d4353</item>
        <item name="sv_showcaseColor">#25467A</item>
        <item name="sv_buttonText">Close</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomDetail</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="CustomDetail" parent="TextAppearance.ShowcaseView.Detail">
        <item name="android:textColor">#fff</item>
    </style>

</resources>
