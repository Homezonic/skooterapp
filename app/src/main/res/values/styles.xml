    <style name="Theme.Base" parent="AppTheme">
        <item name="colorPrimary">@color/skooterNPrimaryTextColor</item>
        <item name="colorPrimaryDark">@color/skooterNPrimaryTextColorDark</item>
        <item name="colorAccent">@color/skooterColorBackgroundAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/skooterBackgroundColor</item>
        <item name="android:homeAsUpIndicator">@color/skooterBackgroundColor</item>
        <item name="homeAsUpIndicator">@color/skooterBackgroundColor</item>
