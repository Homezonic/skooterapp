        <item name="android:textSize">18sp</item>
        <item name="android:actionMenuTextColor">@color/skooterBackgroundColor</item>
        <item name="android:textColorPrimary">@color/skooterPrimaryTextColor</item>
        <item name="android:textColorSecondary">@color/skooterPrimaryTextColor</item>
        <item name="android:background">@color/skooterNPrimaryTextColor</item>
