<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skooter="http://schemas.android.com/tools"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    skooter:context="com.skooterapp.fragments.Peek"
    >

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/list_posts"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrRefreshingLabel="Loading content from followed zones"
        />

    <com.skooterapp.ATextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/peek_info_text"
        android:layout_centerInParent="true"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        />
</RelativeLayout>