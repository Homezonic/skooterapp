<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skooter="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:id="@+id/focusLayout"
    skooter:context="net.aayush.skooterapp.fragments.Home"
    >

    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        >
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/list_posts"
            />
    </android.support.v4.widget.SwipeRefreshLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/post_skoot_holder"
        android:background="#00000000">

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/commentSkoot"
            android:layout_alignParentRight="true"
            android:background="@drawable/post_icon"
            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/enter_a_skoot"
            android:id="@+id/skootText"
            android:layout_toLeftOf="@id/commentSkoot"
            />

    </RelativeLayout>

</LinearLayout>