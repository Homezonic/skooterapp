<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.skooterapp">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"/>

    <application
        android:name="com.skooterapp.AppController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Skooter">

        <receiver
            android:name="com.skooterapp.InstallReferrerReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER"/>
            </intent-filter>
        </receiver>
        <meta-data
            android:name="LOCALYTICS_APP_KEY"
            android:value="ccdfa2471067886943f4461-be2fc62e-ab7e-11e4-a83e-005cf8cbabd8"/>

        <activity
            android:name="com.skooterapp.LoadingActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

            <meta-data
                android:name="android.app.default_searchable"
                android:value=".ChannelActivity"/>
        </activity>
        <activity
            android:name="com.skooterapp.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.skooterapp.ViewPostActivity"
            android:label="@string/title_activity_view_post"
            android:parentActivityName="com.skooterapp.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.skooterapp.MainActivity"/>
        </activity>
        <activity
            android:name="com.skooterapp.ComposeActivity"
            android:label="@string/title_activity_compose"
            android:parentActivityName="com.skooterapp.MainActivity"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.skooterapp.MainActivity"/>
        </activity>
        <activity
            android:name="com.skooterapp.PeekActivity"
            android:label="@string/title_activity_peek"
            android:parentActivityName="com.skooterapp.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.skooterapp.MainActivity"/>
        </activity>
        <activity
            android:name="com.skooterapp.MapActivity"
            android:label="@string/title_activity_map"
            android:parentActivityName="com.skooterapp.ViewPostActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.skooterapp.ViewPostActivity"/>
        </activity>
        <activity
            android:name="com.skooterapp.MeActivity"
            android:label="@string/title_activity_me"
            android:parentActivityName="com.skooterapp.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.skooterapp.MainActivity"/>
        </activity>
        <activity
            android:name="com.skooterapp.MePostsActivity"
            android:label="@string/title_activity_me_posts"
            android:parentActivityName="com.skooterapp.MeActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.skooterapp.MeActivity"/>
        </activity>
        <activity
            android:name="com.skooterapp.MeCommentsActivity"
            android:label="@string/title_activity_me_comments"
            android:parentActivityName="com.skooterapp.MeActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.skooterapp.MeActivity"/>
        </activity>
        <activity
            android:name="com.skooterapp.FlagActivity"
            android:label="@string/title_activity_flag"
            android:parentActivityName="com.skooterapp.ViewPostActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.skooterapp.ViewPostActivity"/>
        </activity>
        <activity
            android:name="com.skooterapp.NotificationsActivity"
            android:label="@string/title_activity_notifications"
            android:parentActivityName="com.skooterapp.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.skooterapp.MainActivity"/>
        </activity>
        <activity
            android:name="com.skooterapp.FavoritesActivity"
            android:label="@string/title_activity_favorites"
            android:parentActivityName="com.skooterapp.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.skooterapp.MainActivity"/>
        </activity>
        <activity
            android:name="com.skooterapp.ChannelActivity"
            android:label="@string/title_activity_channel"
            android:parentActivityName="com.skooterapp.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.skooterapp.MainActivity"/>
        </activity>
        <activity
            android:name="com.skooterapp.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.skooterapp.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.skooterapp.MainActivity"/>
        </activity>
        <activity
            android:name="com.skooterapp.ViewImage"
            android:label="@string/title_activity_view_image"
            android:parentActivityName="com.skooterapp.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.skooterapp.MainActivity"/>
        </activity>
        <activity
            android:name="com.skooterapp.FeedbackActivity"
            android:label="@string/title_activity_feedback"
            android:parentActivityName="com.skooterapp.SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.skooterapp.SettingsActivity"/>
        </activity>
        <activity
            android:name="com.skooterapp.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="com.skooterapp.SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.skooterapp.SettingsActivity"/>
        </activity>
        <activity
            android:name="com.skooterapp.IntroductoryActivity"
            android:label="@string/title_activity_introductory"
            android:parentActivityName="com.skooterapp.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.skooterapp.MainActivity"/>
        </activity>
    </application>

</manifest>
